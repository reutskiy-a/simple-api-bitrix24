{
    "name": "reutskiy-a/simple-api-bitrix24",
    "description": "Simple REST API Bitrix24 client: OAuth 2.0, Webhook, flexible DB support, app installer.",
    "type": "library",
    "keywords": ["bitrix24", "rest", "api", "simple", "php", "sdk"],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Reutskiy Artem",
            "email": "reuckiy@yandex.ru",
            "homepage": "https://github.com/reutskiy-a"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.9",
        "aura/sqlquery": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10",
        "monolog/monolog": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "SimpleApiBitrix24\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleApiBitrix24\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-sqlite3": "For SQLite database support in Aura.SqlQuery"
    }
}

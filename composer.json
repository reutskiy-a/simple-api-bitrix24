{
    "name": "reutskiy-a/simple-api-bitrix24",
    "description": "Simple REST API Bitrix24 client: OAuth 2.0, Webhook, flexible DB support, app installer, API Limit Handling Service",
    "type": "library",
    "keywords": ["bitrix24", "rest", "api", "simple", "php", "sdk", "b24", "bitrix"],
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Reutskiy Artem",
            "email": "reuckiy@yandex.ru",
            "homepage": "https://github.com/reutskiy-a"
        }
    ],
    "require": {
        "php": "^8.1",
        "monolog/monolog": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "guzzlehttp/psr7": "^2.0",
        "aura/sqlquery": "^2.0 || ^3.0",
        "nesbot/carbon": "^2.0 || ^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0",
        "vlucas/phpdotenv": "^3.0 || ^4.0 || ^5.0"
    },
    "autoload": {
        "psr-4": {
            "SimpleApiBitrix24\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleApiBitrix24\\Tests\\": "tests/"
        }
    }
}
